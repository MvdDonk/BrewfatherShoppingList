{
  "manifest_version": 3,
  "name": "Brewfather Shopping List",
  "version": "1.0.0",
  "description": "Create shopping lists from Brewfather recipes",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://web.brewfather.app/*",
    "https://api.brewfather.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.brewfather.app/tabs/recipes/recipe/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Brewfather Shopping List"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
