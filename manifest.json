{
  "manifest_version": 3,
  "name": "Brewfather Shopping List",
  "version": "1.0.0",
  "description": "Create shopping lists from Brewfather recipes",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://web.brewfather.app/*",
    "https://api.brewfather.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.brewfather.app/tabs/recipes/recipe/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Brewfather Shopping List"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "standalone.html",
        "locales/*.json",
        "malt-substitution-database.json"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icons/icon-48.webp",
    "128": "icons/icon-128.webp"
  }
}
